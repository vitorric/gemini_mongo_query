{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "types": ["vite/client"],
    "jsx": "react", // ou "react" para vers√µes mais antigas
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
